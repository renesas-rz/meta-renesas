                u16 *buf = (u16 *)p->txbuf;
@@ -201,44 +206,104 @@ static irqreturn_t rzv2m_csi_irq_handler(int irq, void *data){
        spin_lock_irqsave(&lock_irq, flag);
        p->time_wait = 0; //reset timeout wait
 
-       if(reg_read_bit(p, CSI_INT, CSI_INT_R_TRGR) == 1){
