@@ -519,13 +507,11 @@ static int rcar_i2c_master_xfer(struct i
 
 		rcar_i2c_prepare_msg(priv);
 
-		spin_unlock_irqrestore(&priv->lock, flags);
-		/*-------------- spin unlock -----------------*/
