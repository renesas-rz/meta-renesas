From 2377781eb1ea9e44f464431482482cdbbaaf7a7c Mon Sep 17 00:00:00 2001
From: Hao Bui <hao.bui.yg@renesas.com>
Date: Thu, 23 Jul 2020 17:47:27 +0700
Subject: [PATCH 218/433] ARM: dts: r8a7745-iwg22d-sodimm: Add VIN1 along with
 OV5640 CMOS camera

Signed-off-by: Hao Bui <hao.bui.yg@renesas.com>
---
 arch/arm/boot/dts/r8a7745-iwg22d-sodimm.dts | 35 +++++++++++++++++++++++++++++
 1 file changed, 35 insertions(+)

diff --git a/arch/arm/boot/dts/r8a7745-iwg22d-sodimm.dts b/arch/arm/boot/dts/r8a7745-iwg22d-sodimm.dts
index 8509f32..a49b2a7 100644
--- a/arch/arm/boot/dts/r8a7745-iwg22d-sodimm.dts
+++ b/arch/arm/boot/dts/r8a7745-iwg22d-sodimm.dts
@@ -199,6 +199,20 @@
 		VDDA-supply = <&reg_3p3v>;
 		VDDIO-supply = <&reg_3p3v>;
 	};
+
+	ov5640@3c {
+		compatible = "ovti,ov5640";
+		reg = <0x3c>;
+		remote = <&vin1>;
+
+		port {
+			ov5640: endpoint {
+				bus-width = <8>;
+				pclk-sample = <1>;
+				remote-endpoint = <&vin1ep>;
+			};
+		};
+	};
 };
 
 &pfc {
@@ -263,6 +277,11 @@
 		groups = "usb1";
 		function = "usb1";
 	};
+
+	vin1_pins: vin1 {
+		groups = "vin1_data8", "vin1_sync", "vin1_clk";
+		function = "vin1";
+	};
 };
 
 &rcar_sound {
@@ -348,3 +367,19 @@
 &usbphy {
 	status = "okay";
 };
+
+&vin1 {
+	status = "okay";
+	pinctrl-0 = <&vin1_pins>;
+	pinctrl-names = "default";
+
+	port {
+		#address-cells = <1>;
+		#size-cells = <0>;
+
+		vin1ep: endpoint {
+			remote-endpoint = <&ov5640>;
+			bus-width = <8>;
+		};
+	};
+};
