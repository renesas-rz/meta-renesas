+		pr_warn("Unknown ARP type 0x%04x for device %s\n", dev->type,
+			dev->name);
 		b->htype = dev->type; /* can cause undefined behavior */
 	}
 
@@ -910,14 +901,12 @@ static void __init ic_do_bootp_ext(u8 *ext)
